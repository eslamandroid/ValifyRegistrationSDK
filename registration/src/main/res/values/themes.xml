<resources>
    <!-- Base application theme. -->
    <style name="Theme.RegistrationSDK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextAppearance.App.TitleSmall" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>


    <style name="Widget.App.Toolbar" parent="">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleSmall</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="indicatorColor">@color/white</item>
        <item name="hintTextColor">@color/black</item>


    </style>

    <style name="Widget.MyApp.TextInputEditText" parent="">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>